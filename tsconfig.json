{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "ES5",
        "module": "CommonJS",
        "inlineSourceMap": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "paths": {
            "@core/*": ["./packages/core/src/*"],
            "@server/*": ["./packages/server/src/*"]
          }
    },

}
